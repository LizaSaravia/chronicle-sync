{
  "manifest_version": 3,
  "name": "Chronicle Sync",
  "version": "1.1.0",
  "description": "A secure, cross-platform browser extension for syncing browsing data",
  "permissions": [
    "storage",
    "history",
    "tabs",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "options.html"
}