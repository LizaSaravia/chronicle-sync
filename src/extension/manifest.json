{
  "manifest_version": 3,
  "name": "Chronicle Sync",
  "version": "1.0.0",
  "description": "A secure, cross-platform browser extension for syncing browsing data",
  "permissions": [
    "storage",
    "history",
    "bookmarks"
  ],
  "host_permissions": [
    "https://*.workers.dev/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}