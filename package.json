{
  "name": "chronicle-sync",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "test": "jest",
    "test:e2e": "jest --config jest.e2e.config.js",
    "lint": "eslint .",
    "build:ios": "cd apps/mobile && react-native build-ios",
    "build:android": "cd apps/mobile && react-native build-android",
    "build:chrome": "cd apps/chrome && npm run build",
    "build:firefox": "cd apps/firefox && npm run build",
    "build:web": "cd apps/web && npm run build",
    "start": "cd apps/mobile && react-native start"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-react": "^7.22.0",
    "@babel/preset-typescript": "^7.22.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/react-native": "^12.0.0",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "eslint-plugin-react": "^7.32.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.5.0",
    "typescript": "^5.0.0"
  }
}