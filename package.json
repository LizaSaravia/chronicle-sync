{
  "name": "chronicle-sync",
  "version": "1.1.0",
  "description": "A secure, cross-platform browser extension for syncing browsing data",
  "main": "src/extension/background.js",
  "scripts": {
    "test": "jest",
    "test:e2e": "jest tests/extension.test.js",
    "build": "webpack --mode production",
    "dev": "webpack --mode development --watch",
    "lint": "eslint src tests",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "deploy:staging": "wrangler publish --env staging",
    "deploy:prod": "wrangler publish --env production",
    "dev:worker": "wrangler dev --local"
  },
  "keywords": [
    "browser-extension",
    "sync",
    "cloudflare"
  ],
  "author": "OpenHands",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@types/jest": "^29.5.0",
    "@types/puppeteer": "^5.4.7",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "buffer": "^6.0.3",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.3",
    "puppeteer": "^23.11.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "wrangler": "^3.0.0"
  },
  "dependencies": {
    "idb": "^7.1.1"
  }
}
