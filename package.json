{
  "name": "chronicle-sync",
  "version": "1.1.0",
  "description": "A secure, cross-platform browser extension for syncing browsing data",
  "main": "src/extension/background.js",
  "type": "module",
  "scripts": {
    "test": "vitest run --exclude \"tests/extension.e2e.test.js\"",
    "test:watch": "vitest",
    "test:e2e": "npm run build && RUN_E2E=true vitest run tests/extension.e2e.test.js",
    "build": "webpack --mode production",
    "dev": "webpack --mode development --watch",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "deploy:staging": "wrangler publish --env staging",
    "deploy:prod": "wrangler publish --env production",
    "dev:worker": "wrangler dev --local"
  },
  "keywords": [
    "browser-extension",
    "sync",
    "cloudflare"
  ],
  "author": "OpenHands",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@types/puppeteer": "^5.4.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^1.6.0",
    "babel-loader": "^9.1.3",
    "buffer": "^6.0.3",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "jsdom": "^25.0.1",
    "prettier": "^3.1.1",
    "puppeteer": "^23.11.1",
    "puppeteer-core": "^23.11.1",
    "vitest": "^1.1.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "wrangler": "^3.0.0"
  },
  "dependencies": {
    "idb": "^7.1.1"
  }
}
