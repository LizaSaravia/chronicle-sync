{
  "name": "chronicle-sync",
  "version": "1.1.0",
  "packageManager": "pnpm@9.15.2",
  "description": "A secure, cross-platform browser extension for syncing browsing data",
  "main": "src/extension/background.js",
  "type": "module",
  "scripts": {
    "test": "vitest run tests/unit/App.test.tsx",
    "test:unit": "vitest run tests/unit",
    "test:unit:watch": "vitest tests/unit",
    "test:e2e": "NODE_ENV=test pnpm run build && pnpm exec playwright install chromium && pnpm exec playwright test --config=playwright.local.config.ts",
    "test:e2e:ci": "NODE_ENV=test pnpm run build && pnpm exec playwright install chromium && pnpm exec playwright test --config=playwright.sauce.config.ts",
    "test:e2e:dashboard": "NODE_ENV=test pnpm run build:dashboard && pnpm exec playwright install chromium && pnpm exec playwright test --config=playwright.local.config.ts tests/e2e/dashboard.test.ts",
    "build": "webpack --mode production && webpack --config webpack.worker.js --mode production",
    "build:dashboard": "webpack --config webpack.dashboard.js --mode production",
    "dev": "webpack --mode development --watch",
    "dev:dashboard": "webpack serve --config webpack.dashboard.js",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "deploy:staging": "wrangler publish --env staging",
    "deploy:prod": "wrangler publish --env production",
    "deploy:dashboard:staging": "wrangler pages publish dist/dashboard --project-name chronicle-sync-dashboard --branch staging",
    "deploy:dashboard:prod": "wrangler pages publish dist/dashboard --project-name chronicle-sync-dashboard --branch main",
    "dev:worker": "wrangler dev --local"
  },
  "keywords": [
    "browser-extension",
    "sync",
    "cloudflare"
  ],
  "author": "OpenHands",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/plugin-transform-runtime": "^7.25.9",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.23.0",
    "@babel/preset-typescript": "^7.26.0",
    "@playwright/test": "^1.41.1",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/expect": "^2.1.8",
    "babel-loader": "^9.1.3",
    "buffer": "^6.0.3",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^7.1.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.33.2",
    "html-webpack-plugin": "^5.6.0",
    "http-server": "^14.1.1",
    "prettier": "^3.1.1",
    "style-loader": "^4.0.0",
    "turbo": "^2.3.3",
    "typescript": "~5.3.3",
    "vitest": "^2.1.8",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.0",
    "wrangler": "^3.0.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.26.0",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@mui/base": "5.0.0-beta.68",
    "@mui/icons-material": "^5.11.16",
    "@mui/material": "^5.11.16",
    "@mui/private-theming": "^6.3.1",
    "@mui/utils": "^5.11.16",
    "idb": "^7.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
